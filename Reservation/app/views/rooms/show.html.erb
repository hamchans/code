<p id="notice"><%= notice %></p>

  <strong>Name:</strong>
  <%= @room.name %>

  <strong>Place:</strong>
  <%= @room.place %>

  <strong>Number:</strong>
  <%= @room.number %>

  <strong>Terms of use:</strong>
  <%= @room.terms_of_use %>

  <br>
  <br>
  <strong>Images</strong>
  <br>
  <% @room.images.each do |image| %>
    <%= image_tag image, class: "image img-thumbnail" %>
  <% end %>

<h3 class="mt-2">予約状況</h3>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>予約者</th>
      <th>Email</th>
      <th>予約日時</th>
      <th>使用時間</th>
      <th>使用人数</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @room.entries.each do |ent| %>
      <%= render "entries/entry",entry: ent %>
    <% end %>
  </tbody>
</table>
<div class="col-4"></div>

<% if current_user.admin %>
  <%= link_to 'Edit', edit_room_path(@room) %> |
<% end %>
<%= link_to 'Back', rooms_path %> |
<%= link_to 'Reserve', new_entry_path(room_id: @room.id) %>

<br>
