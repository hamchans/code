<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<p>
  <strong>Place:</strong>
  <%= @room.place %>
</p>

<p>
  <strong>Number:</strong>
  <%= @room.number %>
</p>

<p>
  <strong>Terms of use:</strong>
  <%= @room.terms_of_use %>
</p>

<h3>予約状況</h3>

<% @room.entries.each do |ent| %>
  <%= render "entries/entry",entry: ent %>
<% end %>

<% if current_user.admin %>
  <%= link_to 'Edit', edit_room_path(@room) %> |
<% end %>
<%= link_to 'Back', rooms_path %> |
<%= link_to 'Reserve', new_entry_path(room_id: @room.id) %>
